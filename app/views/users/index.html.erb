<div class="columns is-centered mt-5">
    <div class="column is-one-fifth">
        <h2 class="title is-2">Search Results for: <%= params[:search] %></h2>
        <% @users.each do |user| %>
            <% if user.id != current_user.id %>
            <article class="media">
                <figure class="media-left">
                    <p class="image is-64x64">
                        <img src="https://bulma.io/images/placeholders/128x128.png">
                    </p>
                </figure>
                <div class="media-content">
                    <div class="content">
                        <p>
                            <strong><%= user.username %></strong>
                        </p>
                    </div>
                </div>
                <div class="media-right">
                    <span class="icon">
                        <% if @friends.has_value?(user.id) %>
                            <%= link_to "", friend_path(:id => @friends.key(user.id), :friend_2_id => user.id), method: :delete, :confirm => "Remove User as Friend?", class: "fas fa-user-minus is-clickable" %>
                        <% else %>
                            <%= link_to "", friends_path(friend_1_id: current_user.id, friend_2_id: user.id), method: :post, class: "fas fa-user-plus is-clickable" %>
                        <% end %>
                    </span>
                </div>
            </article>
            <% end %>
        <% end %>
    </div>

</div>